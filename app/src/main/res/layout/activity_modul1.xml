<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modul2Activity">

    <!-- ✅ Pertahankan Judul -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mdl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MODUL 1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/modul_background"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_bolditalic"
        android:layout_marginBottom="16dp" />
    <!-- Tombol Connect -->
    <Button
        android:id="@+id/btn_connect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_refresh"
        app:layout_constraintTop_toBottomOf="@id/mdl1" />

    <!-- Tombol Refresh -->
    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_connect" />

    <!-- ScrollView untuk Channel -->
